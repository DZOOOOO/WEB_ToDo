<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
    <title>커뮤니티</title>
</head>
<body>
<nav class="navbar navbar-dark bg-dark navbar-expand-lg">
    <a class="navbar-brand" href="/">ToDo</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/todo/list">나의 ToDoList</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/board/write">글쓰기</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="http://localhost:3000/publicdata">기상특보</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/member/logout">로그아웃</a>
            </li>
        </ul>
    </div>
</nav>

<table class="table text-center m-auto">
    <thead class="thead-dark">
    <tr>
        <th scope="col">번호</th>
        <th scope="col">제목</th>
        <th scope="col">작성자</th>
    </tr>
    </thead>
    <tbody>
    <% for (let i = 0; i < result.length; i++) { %>
        <tr>
            <th scope="row"><%= result[i].id %></th>
            <td><a href="http://localhost:3000/board/detail/<%= result[i].id %>"><%= result[i].title %></a></td>
            <td><%= result[i].nickName %></td>
        </tr>
    <% } %>
    </tbody>
</table>
<br>
<br>
<!-- 페이지 버튼 (페이지당 10개)-->
<nav aria-label="Page navigation example">
    <ul class="pagination" style="float: right">

        <% if(parseInt(page) >= 1) { %>
            <li class="page-item">
                <a class="page-link" href="http://localhost:3000/board/list?page=<%= --page %>" aria-label="Previous">
                    <span aria-hidden="true">⬅️</span>
                </a>
            </li>

            <% if(result.length > 0) { %>
                <% ++page %>
                <li class="page-item">
                    <a class="page-link" href="http://localhost:3000/board/list?page=<%= ++page %>"
                       aria-label="Next">
                        <span aria-hidden="true">➡️</span>
                    </a>
                </li>
            <% } else { %>

            <% } %>

        <% } else if (result.length > 0){ %>
            <li class="page-item">
                <a class="page-link" href="http://localhost:3000/board/list?page=<%= ++page %>"
                   aria-label="Next">
                    <span aria-hidden="true">➡️</span>
                </a>
            </li>
        <% } %>

    </ul>
</nav>

</body>
</html>