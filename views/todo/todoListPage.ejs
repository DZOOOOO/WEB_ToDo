<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>

    <title>ToDo 리스트</title>
</head>
<body>

<nav class="navbar navbar-dark bg-dark navbar-expand-lg">
    <a class="navbar-brand" href="http://localhost:3000">ToDo</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="http://localhost:3000/todo/write">로그아웃</a>
            </li>
        </ul>
    </div>
</nav>

<h4 class="container mt-4">
    <strong>ToDo 리스트 페이지</strong>
    <a class="btn btn-primary" href="http://localhost:3000/todo/write">ToDo 작성</a>
</h4>


<div class="container mt-3">
    <% for (let i = 0; i < filterResult.length; i++) { %>
        <div class="card w-75" id="<%= filterResult[i].id %>">
            <div class="card-body">
                <h5 class="card-title"><%= filterResult[i].todo %></h5>
                <p class="card-text"><%= filterResult[i].date %></p>
                <!--      수정 모달 폼        -->
                <div class="mt-3 w-50" id="todo-modal-<%= i %>" style="display: none">
                    <div class="form-group">
                        <label>할일</label>
                        <input type="text" class="form-control edit-work" id="todo-<%= i %>">
                    </div>
                    <div class="form-group">
                        <label>마감일</label>
                        <input type="date" class="form-control edit-date" id="date-<%= i %>">
                    </div>
                    <button class="btn btn-primary" onclick="todoEdit(<%= filterResult[i].id %>)">수정</button>
                </div>

                <% if (parseInt(filterResult[i].complete)) { %>
                    <p class="card-text" id="complete">완료</p>
                    <br>
                <% } else { %>
                    <p class="card-text" id="complete">진행중</p>
                    <br>
                    <a class="btn btn-primary" onclick="todoComplete(<%= filterResult[i].id %>)">완료</a>
                    <a class="btn btn-primary" onclick="showModal(<%= i %>)">수정하기</a>
                <% } %>
            </div>
        </div>
    <% } %>
</div>


<script>
    $(document).ready(function () {
        // checkComplete();
    });

    // 완료시 UI 변경
    function checkComplete() {
        let check = document.querySelectorAll('.card');
        let complete = document.getElementById('complete').innerText;
        if (complete === '완료') {
            document.querySelector('.card').style.opacity = 0.5;
        }
    }

    function showModal(i) {
        let modal = document.getElementById(`todo-modal-${i}`).style.display;
        if (modal === `none`) {
            document.getElementById(`todo-modal-${i}`).style.display = 'block';
        } else {
            document.getElementById(`todo-modal-${i}`).style.display = 'none';
        }
    }

    function todoComplete(todoId) {
        if (confirm('완료하시겠습니까? 완료후에는 수정이 불가능 합니다..!')) {
            $.ajax({
                url: `http://localhost:3000/todo/complete/${todoId}`,
                method: `PATCH`,
                data: {
                    todoId: todoId,
                    complete: true
                },
                success: function (response) {
                    alert(response.message);
                    window.location.reload();
                },
                error: function (response) {
                    console.log(response);
                }
            });
        }

    }

    function todoEdit(todoId) {
        let editTodo = document.querySelectorAll('.edit-work')[todoId - 1].value;
        let editDate = document.querySelectorAll('.edit-date')[todoId - 1].value;
        let checkDate = new Date(editDate);

        if (checkDate < new Date()) {
            return alert('날짜 확인 해주세요..!');
        } else {
            $.ajax({
                url: `http://localhost:3000/todo/edit/${todoId}`,
                method: `PATCH`,
                data: {
                    todoId,
                    editTodo,
                    editDate
                },
                success: function (response) {
                    console.log(response);
                    alert(response.message);
                    window.location.reload();
                },
                error: function (response) {
                    console.log(response);
                }
            });
        }


    }

    // 구현이 필요할 경우 체크
    function todoDelete() {
        $.ajax({
            url: `http://localhost:3000/todo/write`,
            method: `POST`,
            data: {
                todo,
                date
            },
            success: function (response) {
                console.log(response);
                alert(response.message);
                window.location.reload();
            },
            error: function (response) {
                console.log(response);
                window.location.reload();
            }
        });
    }
</script>
</body>
</html>