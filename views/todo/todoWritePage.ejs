            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>

    <title>ToDo 작성</title>
</head>
<body>

<nav class="navbar navbar-dark bg-dark navbar-expand-lg">
    <a class="navbar-brand" href="http://localhost:3000">ToDo</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <!--                <a class="nav-link" href="#">로그인</a>-->
            </li>
            <li class="nav-item">
                <!--                <a class="nav-link" href="#">회원가입</a>-->
            </li>
        </ul>
    </div>
</nav>

<h4 class="container mt-4"><strong>ToDo 작성페이지</strong></h4>

<div class="container mt-3">
    <div class="form-group">
        <label>할일</label>
        <input type="text" class="form-control" id="todo">
    </div>
    <div class="form-group">
        <label>마감일</label>
        <input type="date" class="form-control" id="date">
    </div>
    <div style="float: right;">
        <button class="btn btn-outline-secondary" onclick="writeTodo()">작성</button>
        <a class="btn btn-primary" href="http://localhost:3000/todo/list">취소</a>
    </div>
</div>

<script>
    function writeTodo() {
        let todo = document.getElementById('todo').value;
        let date = document.getElementById('date').value;
        let checkDate = new Date(date);

        if (checkDate < new Date()) {
            return alert('날짜 확인 해주세요..!');
        } else {
            $.ajax({
                url: `http://localhost:3000/todo/write`,
                method: `POST`,
                data: {
                    todo,
                    date
                },
                success: function (response) {
                    console.log(response);
                    alert(response.message);
                    window.location.reload();
                },
                error: function (response) {
                    console.log(response);
                }
            });
        }
    }
</script>
</body>
</html>